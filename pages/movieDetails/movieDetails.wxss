page {
  height: 100%;
}
.scroll_field {
  width: 100%;
  height: 100%;
}
.bgimg_wrap {
  width: 100%;
  height: auto;
}
.bg_img {
  display: block;
  width: 100%;
  height: 600rpx;
  filter: blur(10rpx);
}
.movie_info_wrap {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}
.movie_top {
  padding: 50rpx 0 50rpx 40rpx;
}
.movie_top .movie_title {
  font-size: 50rpx;
  line-height: 100rpx;
  color: #fff;
  font-family: 'Microsoft YaHei';
  font-weight: bold;
}
.movie_top .movie_countries {
  font-size: 24rpx;
  line-height: 1;
  color: #fff;
}
.movie_tap_wrap {
  display: flex;
  border-top-right-radius: 50rpx;
  border-top-left-radius: 50rpx;
  justify-content: space-around;
  overflow: hidden;
}
.movie_tap_wrap .tap_item {
  width: 50%;
  text-align: center;
  font-size: 28rpx;
  line-height: 60rpx;
  background: #e6e6e6;
}
.movie_tap_wrap .tap_item.active {
  background-color: #fff;
}
/* 详细信息部分 */
.tap_content {
  width: 100%;
  padding: 20rpx 10rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.top_img {
  display: flex;
  justify-content: flex-start;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.movie_thumbnail {
  display: block;
  width: 150rpx;
  height: 200rpx;
}
.movie_info {
  padding-left: 20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}
.movie_info .movie_title {
  font-size: 24rpx;
  line-height: 40rpx;
  color: rgba(167, 16, 236, 0.842);
  font-family: 'Microsoft YaHei';
  font-weight: bold;
}
.movie_info .movie_rating_wrap text {
  display: inline-block;
  margin-right: 30rpx;
}
.movie_info .movie_rating_wrap text .red_font {
  margin-right: 0;
  color: #ee0f6c;
}
/* 剧情简介部分 */
.summary_wrap {
  padding-top: 20rpx;
  font-size: 30rpx;
  line-height: 45rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.summary_title {
  padding-bottom: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 60rpx;
}
.summary_wrap .summary_content {
  padding: 0 20rpx;
  text-indent: 40rpx;
}
/* 影片导演部分 */
.director_wrap,
.casts_wrap {
  margin-top: 30rpx;
  width: 100%;
  overflow-x: hidden;
}
.director_wrap {
  padding-bottom: 10rpx;
}
.director_list_wrap,
.cast_list_wrap {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto; 
}
.director_item,
.cast_item {
  display: inline-block;
  padding: 20rpx;
  width: 190rpx;
  box-sizing: border-box;
}
.director_item .director_avatars,
.cast_item .cast_avatars
 {
  display: block;
  width: 150rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.director_item .director_name,
.cast_item .cast_name{
  display: block;
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 40rpx;
}
/* 评论部分 */
.field_title {
  font-size: 40rpx;
  line-height: 80rpx;
  font-weight: bold;
  text-indent: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 10px solid #e6e6e6;
}
.comments_item {
  display: flex;
  padding: 30rpx 0 0 30rpx;
  justify-content: flex-start;
}
.user_avatar {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.comments_wrap {
  position: relative;
  width: calc(100% - 120rpx);
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.comments_item:last-child .comments_wrap {
  border-bottom: 0;
}
.comments_wrap text {
  display: block;
}
.user_name {
  font-size: 36rpx;
  line-height: 60rpx;
  color: #000;
}
.comments_time {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #d1cece;
}
.comments_content {
  padding: 40rpx 20rpx 0 0;
  font-size: 26rpx;
  line-height: 40rpx;
}
.comments_useful {
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  font-size: 26rpx;
  line-height: 40rpx;
}
.comments_useful text {
  display: inline-block;
  margin-right: 10rpx;
  color: #ee0f6c;
}