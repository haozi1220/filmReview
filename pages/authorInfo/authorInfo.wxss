.authorinfo_container {
  padding: 30rpx;
  background-color: #e3e3e3;
}
.container_wrap {
  box-shadow: 0 5rpx 20rpx #534d4d;
  background-color: #fff;
}
.author_title {
  padding: 10rpx 0 20rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
}
.info_wrap {
  padding: 0 20rpx 30rpx;
}
.author_name,
.work_title,
.assessment_title {
  font-size: 40rpx;
  line-height: 70rpx;
  font-weight: bold;
}
.school_wrap {
  display: flex;
  justify-content: flex-start;
  margin: 30rpx 0;
  font-size: 30rpx;
  line-height: 40rpx;
}
.school_wrap .left_wrap {
  width: 25%;
  color: #333;
  font-weight: bold;
}
.work_item {
  margin-top: 40rpx;
}
.work_item .company_name {
  font-size: 32rpx;
  line-height: 50rpx;
  font-weight: bold;
}
.work_item .school_wrap {
  margin: 10rpx 0;
} 
.self_assessment {
  padding-top: 20rpx; 
}
.self_assessment .assessment_item {
  padding-top: 30rpx; 
  font-size: 30rpx;
  line-height: 40rpx;
}